<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EasyBarcodeMAU.Models"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="EasyBarcodeMAU.EditItemPage"
             Title="Ürün Değişikliği"
             BackgroundColor="AntiqueWhite"  >

    <ContentPage.BindingContext>
        <vm:ReadBaseModel />
    </ContentPage.BindingContext>
    

    <VerticalStackLayout VerticalOptions="Start" Margin="10">
        <StackLayout>
            <Frame BorderColor="DarkGrey"
                   Padding="10"
                   CornerRadius="3"
                   BackgroundColor="Transparent"
                   Margin="5"
                   MinimumHeightRequest="420">

                <ScrollView>
                    <StackLayout>
                        <Label Text="Düzenleme İşlemlerinizi Uygun Şekilde Yapınız." FontSize="Large" TextColor="Black" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="0, 10, 0, 10" />
                        <ListView x:Name="barcodeListView" HeightRequest="220" RowHeight="40" >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid Padding="10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="220" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackLayout Grid.Column="0" >
                                                <Label Text="{Binding Barcode}" TextColor="Black" FontSize="Large" HeightRequest="40"/>
                                            </StackLayout>
                                            <StackLayout Grid.Column="1" Orientation="Horizontal" >
                                                <Label Text="{Binding Count}" TextColor="Black" FontSize="Large" HeightRequest="25" />
                                                <Button Text="-" CommandParameter="{Binding .}" FontSize="Large" Padding="0" Margin="0" TextColor="White" Clicked="ArtirAzaltButton_Clicked" WidthRequest="30" HeightRequest="30"  CornerRadius="4"/>
                                                <Button Text="+" CommandParameter="{Binding .}" FontSize="Large" Padding="0" Margin="0" TextColor="White" Clicked="ArtirAzaltButton_Clicked" WidthRequest="30" HeightRequest="30"  CornerRadius="4" />
                                            </StackLayout>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </ScrollView>
            </Frame>
            <StackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                </Grid>
                <Button Grid.Row="0" Margin="10" Text="Düzenlemeyi Kaydet"  Clicked="Kaydet_Clicked" BackgroundColor="LightSkyBlue"></Button>
                <Button Grid.Row="1" Margin="10" Text="Vazgeç" BackgroundColor="LightSlateGray"></Button>
            </StackLayout>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>
