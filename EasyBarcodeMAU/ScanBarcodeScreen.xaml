<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="EasyBarcodeMAU.ScanBarcodeScreen"
        
     >

    <StackLayout>
        <VerticalStackLayout Spacing="10" Padding="30,0,10,0" VerticalOptions="Center">
            <Label x:Name="barcodeResult"  FontSize="30" TextColor="Black" />
            <cv:CameraView  x:Name="cameraView" WidthRequest="400" HeightRequest="200" CamerasLoaded="cameraView_CamerasLoaded" BarCodeDetectionEnabled="True" BarcodeDetected="cameraView_BarcodeDetected"/>
        </VerticalStackLayout>
 
      

        <Image Source="istlog.jpg" WidthRequest="200" HeightRequest="200"/>
        <Label Text="Okunan Adet:" FontSize="10" TextColor="#ffffff" VerticalTextAlignment="Start" HorizontalTextAlignment="Start" />
        <StackLayout>
            <Label Text="{Binding ReadedCount}" FontSize="Small"/>
        </StackLayout>

        <Label Text="Barkod DeÄŸeri:" FontSize="30" TextColor="#ffffff" VerticalTextAlignment="End" HorizontalTextAlignment="End" />
    </StackLayout>
</ContentPage>
