<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EasyBarcodeMAU.Models"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="EasyBarcodeMAU.ScanBarcodeScreen">

    <ContentPage.BindingContext>
        <vm:ReadBaseModel />
    </ContentPage.BindingContext>
    <StackLayout>
        <VerticalStackLayout Spacing="10" Padding="30,0,10,0" VerticalOptions="Center">
            <Label x:Name="barcodeResult"  FontSize="30" TextColor="Black" />
            <cv:CameraView  x:Name="cameraView" WidthRequest="400" HeightRequest="100" CamerasLoaded="cameraView_CamerasLoaded" BarCodeDetectionEnabled="True" BarcodeDetected="cameraView_BarcodeDetected"/>
        </VerticalStackLayout>
        <Label Text="Okunan Adet:" FontSize="10" TextColor="#ffffff" VerticalTextAlignment="Start" HorizontalTextAlignment="Start" />
        <Frame BackgroundColor="Pink" Padding="10,5" CornerRadius="5" HasShadow="True">
            <StackLayout>
                <Label Text="Sayım Yapılması Gereken Adet : " TextColor="White" FontAttributes="Bold"/>
                <Label Text="{Binding RequiredCount}" TextColor="White"/>
                <Label Text="Sayım Yapılacak Ürün Adet : " TextColor="White" FontAttributes="Bold"/>
                <Label Text="{Binding ReadedCount}" TextColor="White"/>
                <Label Text="Sayım Yapılan Ürün : " TextColor="White" FontAttributes="Bold"/>
                <Label Text="{Binding SelectedProduct}" TextColor="White"/>

            </StackLayout>
        </Frame>
        <Label Text="Barkod Değeri:" FontSize="30" TextColor="#ffffff" VerticalTextAlignment="End" HorizontalTextAlignment="End" />
    </StackLayout>
</ContentPage>
