<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyBarcodeMAU.ScanBarcodeScreen"
             xmlns:vm="clr-namespace:EasyBarcodeMAU"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.Maui.Controls"
             Title="ScanBarcodeScreen">
    <StackLayout>
        <zxing:CameraBarcodeReaderView x:Name="barCodereader" BarcodesDetected="barCodereader_BarcodesDetected"/>

        <StackLayout x:Name="barcodeBox" BackgroundColor="#000000">
            <Label Text="Barkod Değeri:" FontSize="30" TextColor="#ffffff" />
        </StackLayout>

        <StackLayout x:Name="barcodeValueLabel2" BackgroundColor="#ffffff">
            <Label Text="{Binding BarcodeValue}" FontSize="40" TextColor="#000000" />
        </StackLayout>



        <StackLayout x:Name="barcodeValueBox" BackgroundColor="#ffffff">
            <Label x:Name="barcodeValueLabel" FontSize="40" TextColor="#000000" />
        </StackLayout>

        <Image Source="istlog.jpg" WidthRequest="200" HeightRequest="200"/>

        <Label Text="Barkod Değeri:" FontSize="30" TextColor="#ffffff" VerticalTextAlignment="End" HorizontalTextAlignment="End" />
    </StackLayout>
</ContentPage>
