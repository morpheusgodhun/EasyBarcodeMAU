<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EasyBarcodeMAU.Models"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="EasyBarcodeMAU.ScanBarcodeScreen">
    <ContentPage.BindingContext>
        <vm:ReadBaseModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Padding="10,10">
        <Frame Padding="20,10" CornerRadius="5" HasShadow="True">
            <StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                    <StackLayout Orientation="Horizontal" WidthRequest="155" >
                        <Label Text="Stok Adet  : " TextColor="Black" FontAttributes="Bold"/>
                        <Label Text="{Binding RequiredCount}" TextColor="Black"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal"  WidthRequest="155" Margin="10,0,0,0">
                        <Label Text="Ürün : " TextColor="Black" FontAttributes="Bold" />
                        <Label Text="{Binding SelectedProduct}" TextColor="Black" />
                    </StackLayout>
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="Gray" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="0,5"/>
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                    <StackLayout Orientation="Horizontal" WidthRequest="155"  >
                        <Label Text="Ürün Adet : " TextColor="Black" FontAttributes="Bold" />
                        <Label Text="{Binding ReadedCount}" TextColor="Black"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal"   WidthRequest="155" Margin="10,0,0,0">
                        <Label Text="Depo : " TextColor="Black" FontAttributes="Bold"   />
                        <Label Text="{Binding DepoKonum}" TextColor="Black" />
                    </StackLayout>
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="Gray" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="0,5"/>
            </StackLayout>
        </Frame>
        <VerticalStackLayout Spacing="10"  VerticalOptions="Center">
            <Label x:Name="barcodeResult"  FontSize="15" TextColor="White" HorizontalTextAlignment="Center" BackgroundColor="DarkGreen" Margin="0,10" Padding="0,5"/>
            <cv:CameraView  x:Name="cameraView" WidthRequest="400" HeightRequest="100" CamerasLoaded="cameraView_CamerasLoaded" BarCodeDetectionEnabled="True" BarcodeDetected="cameraView_BarcodeDetected"/>
        </VerticalStackLayout>
        <StackLayout Padding="10,20" Margin="0,10,0,0"  >
            <Frame BorderColor="Black">
                <ScrollView Padding="5,5">
                    <ListView x:Name="barcodeListView" HeightRequest="200" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollView>
            </Frame>
        </StackLayout>

        <Grid Padding="10,20" WidthRequest="340"  >
            <Grid.RowDefinitions >
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Text="Onayla"  Grid.Column="0" HeightRequest="60" WidthRequest="100" BackgroundColor="MediumSeaGreen" Clicked="Onayla_Clicked" FontSize="Body" FontAttributes="Bold" BorderWidth="1" BorderColor="Black"></Button>
            <Button Text="Vazgeç"  Grid.Column="1" HeightRequest="60" WidthRequest="100" BackgroundColor="Red" FontSize="Body" Clicked="Vazgec_Clicked" FontAttributes="Bold"  BorderWidth="1" BorderColor="Black"></Button>

        </Grid>
    </VerticalStackLayout>
</ContentPage>
