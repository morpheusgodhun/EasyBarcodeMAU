<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyBarcodeMAU.SelectionPage"
             BackgroundImageSource="page6"
             Title="Menü Seçimi">

    <Grid Padding="10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button x:Name="productInputButton" Text="Ürün Girişi" Grid.Column="0" Grid.Row="0" HeightRequest="100" WidthRequest="170" BackgroundColor="Green" Clicked="ProductInputButton_Clicked"
></Button>
        <Button x:Name="productOutputButton" Clicked="ProductOutputButton_Clicked" Text="Ürün Çıkışı" Grid.Column="1" Grid.Row="0" HeightRequest="100" WidthRequest="170" ></Button>
        <Button Text="Çıkış" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" HeightRequest="100" WidthRequest="340" FontSize="Body" BackgroundColor="Red" ></Button>

    </Grid>

</ContentPage>