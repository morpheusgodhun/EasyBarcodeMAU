<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyBarcodeMAU.SelectionPage"
             BackgroundImageSource="page6"
             Title="Menü Seçimi">

    <Grid Padding="10,20" WidthRequest="340">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="productInputButton" Text="Ürün Girişi"  Grid.Row="0" HeightRequest="60" WidthRequest="330" BackgroundColor="MediumSeaGreen"  Clicked="ProductInputButton_Clicked" FontSize="Body" FontAttributes="Bold" BorderWidth="1" BorderColor="Black"></Button>
        <Button x:Name="productOutputButton" Clicked="ProductOutputButton_Clicked" Text="Ürün Çıkışı" Grid.Row="1" HeightRequest="60" WidthRequest="330" FontSize="Body"  FontAttributes="Bold" BackgroundColor="DarkSlateBlue" BorderWidth="1" BorderColor="Black"></Button>
        <Button Text="Çıkış" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" HeightRequest="60" WidthRequest="330" BackgroundColor="IndianRed"  Clicked="ExitButton_Clicked" FontSize="Body"  FontAttributes="Bold" BorderWidth="1" BorderColor="Black"></Button>
    </Grid>

</ContentPage>